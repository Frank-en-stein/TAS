<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/asd"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SETTINGS"

        android:id="@+id/textView7"
        android:textSize="36dp"
        android:textColor="#ffffff"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Notifications"
            android:textSize="20dp"
            android:id="@+id/button16"
            android:textColor="#ffffff"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="34dp"/>

        <Switch
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:background="#857e7e"
            android:layout_gravity="right"
            android:layout_alignBaseline="@+id/button16"
            android:layout_alignBottom="@+id/button16"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Account"
        android:id="@+id/textView13"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_above="@+id/button12"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button12"
        android:background="#857e7e"
        android:textColor="#ffffff"
        android:onClick="reqlogout"
        android:layout_above="@+id/textView14"
        android:layout_alignParentStart="true" />


    <TextView android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:text="SOS settings"
         android:id="@+id/textView14"
         android:paddingTop="20dp"
         android:textAlignment="textStart"
         android:textColor="#ffffff"
         android:textSize="20dp"
         android:layout_above="@+id/button13"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:layout_alignParentStart="true" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact1:"
        android:id="@+id/textView104"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_above="@+id/button13"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact1"
        android:text=""
        android:inputType="phone"
        android:textAlignment="textStart"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/editText8"
        android:layout_alignParentStart="true" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact2:"
        android:id="@+id/textView105"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_above="@+id/button13"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact2"
        android:text=""
        android:inputType="phone"
        android:textAlignment="textStart"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/editText8"
        android:layout_alignParentStart="true" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact3:"
        android:id="@+id/textView106"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_above="@+id/button13"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact3"
        android:text=""
        android:inputType="phone"
        android:textAlignment="textStart"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/editText8"
        android:layout_alignParentStart="true" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Emergency Message:"
        android:id="@+id/textView107"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_above="@+id/button13"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msgtxt"
        android:text=""
        android:inputType="textAutoCorrect"
        android:textAlignment="textStart"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/editText8"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save Changes"
        android:id="@+id/button14"
        android:background="#857e7e"
        android:textColor="#ffffff"
        android:onClick="svchng"
        android:layout_below="@+id/button13"
        android:layout_alignParentStart="true" />





    </LinearLayout>

</ScrollView>
