<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activity_home">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/asd"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HOME"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHighlight="#f9f4f4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="@dimen/abc_panel_menu_list_width"
        android:textSize="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Press volume UP DOWN UP or DOWN UP DOWN to send emergency alert"
        android:id="@+id/textView3"
        android:textColor="#bfbdb2"
        android:textAlignment="center"
        android:textSize="23dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REPORT"
        android:id="@+id/button4"
        android:textAlignment="center"
        android:textSize="15dp"
        android:background="@drawable/report"
        android:layout_alignTop="@+id/button7"
        android:layout_toStartOf="@+id/button5"
        android:onClick="report" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:text="SETTING"
        android:id="@+id/button5"
        android:background="@drawable/settings"
        android:textAlignment="center"
        android:textSize="15dp"

        android:layout_alignTop="@+id/button4"
        android:layout_toStartOf="@+id/button6"
        android:onClick="setting" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:text="TUTORIAL"
        android:background="@drawable/archieve"
        android:id="@+id/button6"
        android:textAlignment="center"
        android:textSize="15dp"

        android:layout_alignTop="@+id/button5"
        android:layout_toStartOf="@+id/button7"
        android:onClick="tutorial" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:text="ARCHIVE"
        android:id="@+id/button7"
        android:background="@drawable/tutorial"
        android:textAlignment="center"
        android:textSize="15dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="archieve" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:text="SOS ON"
        android:background="@drawable/panic"
        android:id="@+id/button"
        android:textAlignment="center"
        android:textSize="31dp"
        android:onClick="func"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
